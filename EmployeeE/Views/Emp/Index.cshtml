@model IEnumerable<EmployeeE.Models.Emp>

<h2>Çalışanlar</h2>
<p><a asp-action="Create" class="btn btn-primary">Yeni Ekle</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Pozisyon</th>
            <th>Maaş</th>
            <th>Komisyon</th>
            <th>Departman</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Empno - @item.Ename</td>
                <td>@item.Job</td>
                <td>@item.Sal TL</td>
                <td>@(item.Comm?.ToString("C") ?? "-")</td>
                <td>@item.DeptnoNavigation?.Dname</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Empno" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Empno" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Empno" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
